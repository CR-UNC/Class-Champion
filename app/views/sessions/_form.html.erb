
<%= form_for :session, url: session_path do |form| %>
  <div class="text-field">
    <%= form.text_field :email, type: 'email', placeholder: "email", :class => "form-control" %>
  </div>

  <div class="password-field">
    <%= form.password_field :password, placeholder: "password", :class => "form-control" %>
  </div>

<div class = "container signing-btns">
  <div class = "row">
    <div class="col-sm-6">
      <div class="submit-field">
        <%= form.submit 'Sign in', :class => 'btn btn-primary' %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="other-links">
        <% if Clearance.configuration.allow_sign_up? %>
          <%= link_to t(".sign_up"), sign_up_path, :class => "btn btn-primary"  %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>



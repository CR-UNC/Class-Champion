<h1> New Assignment</h1>

    <%= form_for :assignment, url: assignments_path do |f| %>  
        <p>     
            <%= f.label :title %><br>     
            <%= f.text_field :title %>   
        </p>
        
        <p>     
            <%= f.label :text %><br>     
            <%= f.text_area :text %>   
        </p>    
        
        <p>     
            <%= f.submit %>   
        </p> 
    <% end %>
<% if signed_in? %>
  <%= current_user.username %>
  <%= button_to "Sign out", sign_out_path, method: :delete %>
<% else %>
  <h1>Username(placeholder)</h1>
  <%= link_to "Sign in", sign_in_path %>
<% end %>

<%= link_to 'Add Assignment', new_assignment_path %> 
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">List of Assignments</th>
      <th scope="col">Status</th>
      <th scope="col">Difficulty</th>
      <th scope="col">Desired Grade</th>
      <th scope="col">Due Date</th>
    
    </tr>
  </thead>
 
  <% @assignments.each do |assignment| %>
    <tr>
      <td><%= assignment.title %></td>
      <td><%= assignment.text %></td>
      <td><%= assignment.difficulty %></td>
      <td>%<%= assignment.Goalgrade %></td>
      <td><%= assignment.Due %></td>
      <td><%= link_to 'Show', assignment_path(assignment) %></td>
      <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
      <td><%= link_to 'Destroy', assignment_path(assignment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>


<%= form_for @assignment do |f| %>   

    <% if @assignment.errors.any? %>     
        <div id="error_explanation">      
            <p>        
                <%= pluralize(@assignment.errors.count, "error") %> prohibited  
                this article from being saved:      
            </p>       
            <ul>        
                <% @assignment.errors.full_messages.each do |msg| %>           
                    <li><%= msg %></li>         
                <% end %>      
            </ul>     
        </div>  
    <% end %>    
    <p>     
            <%= f.label :title, "Assignment Name" %><br>     
            <%= f.text_field :title %>   
        </p>
        
        <p>     
            <%= f.label :text, "Assignment Description" %><br>     
            <%= f.text_area :text %>   
        </p>    
        
        <p>
            <%= f.label :difficulty, "Difficulty on a scale of 1 to 10"%><br>
            <%= f.text_field :difficulty%>
        </p>
        
        <p>
            <%= f.label :Goalgrade, "Goal Grade"%><br>
            <%= f.text_field :Goalgrade %>
            
           
        </p>
        
        <p>
            <%= f.label :Due, "Due Date"%><br>
            <%= f.date_select :Due%>
        </p>
        
    <p>     
        <%= f.submit %>  
    </p>  
<% end %>


<h1> New Incentive</h1>
<%= form_for :incentive, url: incentive_path do |f| %>   

    <p>     
            <%= f.label :title, "Incentive Name" %><br>     
            <%= f.text_field :title %>   
        </p>
        
        <p>     
            <%= f.label :text, "Incentive Description" %><br>     
            <%= f.text_area :text %>   
        </p>    
        
        
        <p>
            <%= f.label :cost, "Point Cost"%><br>
            <%= f.text_field :cost%>
        </p>
        
        <p>
            <%= f.label :image, "Incentive Picture"%> <br>
            <%= f.file_field :image %>
        </p>
        
    <p>     
        <%= f.submit %>  
    </p>  
<% end %>
